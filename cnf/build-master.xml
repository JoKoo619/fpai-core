<?xml version="1.0" encoding="UTF-8"?>
<project name="fpai" default="build">

	<property name="version" value="development" />

	<property name="releasedir" value="/var/www/html/releases/fpai" />

	<target name="build">
		<ant dir="../flexiblepower.api" target="build" />
		<ant dir="../flexiblepower.api.ext" target="build" />
		<ant dir="../flexiblepower.appstore.client" target="build" />
		<ant dir="../flexiblepower.appstore.common" target="build" />
		<ant dir="../flexiblepower.appstore.server" target="build" />
		<ant dir="../flexiblepower.runtime" target="build" />
		<ant dir="../flexiblepower.ui" target="build" />
		<ant dir="../flexiblepower.ui.appinfo" target="build" />
		<ant dir="../flexiblepower.ui.applianceinfo" target="build" />
	</target>

	<target name="release">
		<ant dir="../flexiblepower.api" target="release" />
		<ant dir="../flexiblepower.api.ext" target="release" />
		<ant dir="../flexiblepower.appstore.client" target="release" />
		<ant dir="../flexiblepower.appstore.common" target="release" />
		<ant dir="../flexiblepower.appstore.server" target="release" />
		<ant dir="../flexiblepower.runtime" target="release" />
		<ant dir="../flexiblepower.ui" target="release" />
		<ant dir="../flexiblepower.ui.appinfo" target="release" />
		<ant dir="../flexiblepower.ui.applianceinfo" target="release" />
	</target>

	<target name="coverage-report">
		<ant dir="../flexiblepower.api" target="coverage-report" />
		<ant dir="../flexiblepower.api.ext" target="coverage-report" />
		<ant dir="../flexiblepower.appstore.client" target="coverage-report" />
		<ant dir="../flexiblepower.appstore.common" target="coverage-report" />
		<ant dir="../flexiblepower.appstore.server" target="coverage-report" />
		<ant dir="../flexiblepower.runtime" target="coverage-report" />
		<ant dir="../flexiblepower.ui" target="coverage-report" />
		<ant dir="../flexiblepower.ui.appinfo" target="coverage-report" />
		<ant dir="../flexiblepower.ui.applianceinfo" target="coverage-report" />
	</target>

	<target name="clean">
		<ant dir="../flexiblepower.api" target="clean" />
		<ant dir="../flexiblepower.api.ext" target="clean" />
		<ant dir="../flexiblepower.appstore.client" target="clean" />
		<ant dir="../flexiblepower.appstore.common" target="clean" />
		<ant dir="../flexiblepower.appstore.server" target="clean" />
		<ant dir="../flexiblepower.runtime" target="clean" />
		<ant dir="../flexiblepower.ui" target="clean" />
		<ant dir="../flexiblepower.ui.appinfo" target="clean" />
		<ant dir="../flexiblepower.ui.applianceinfo" target="clean" />
	</target>
	
	<target name="checkstyle">
		<ant dir="../flexiblepower.api" target="checkstyle" />
		<ant dir="../flexiblepower.api.ext" target="checkstyle" />
		<ant dir="../flexiblepower.appstore.client" target="checkstyle" />
		<ant dir="../flexiblepower.appstore.common" target="checkstyle" />
		<ant dir="../flexiblepower.appstore.server" target="checkstyle" />
		<ant dir="../flexiblepower.runtime" target="checkstyle" />
		<ant dir="../flexiblepower.ui" target="checkstyle" />
		<ant dir="../flexiblepower.ui.appinfo" target="checkstyle" />
		<ant dir="../flexiblepower.ui.applianceinfo" target="checkstyle" />
	</target>

	<target name="publishrelease" depends="release">
		<delete dir="${releasedir}/${version}/repo" />
		<mkdir dir="${releasedir}/${version}/repo" />
		<copy todir="${releasedir}/${version}/repo">
			<fileset dir="release" />
		</copy>
	</target>



</project>
